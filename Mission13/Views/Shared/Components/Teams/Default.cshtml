@{
}

@model IEnumerable<string>

@if (ViewBag.SelectedType != null)
{
    <h3>Bowlers on the @ViewBag.SelectedType</h3>
}
else
{
    <h1>Bowlers</h1>
}

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam="" class="@(ViewBag.SelectedType == null ? "btn btn-block btn-primary" : "btn btn-block btn-outline-secondary")">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam="@t"
           class="@(ViewBag.SelectedType == t ? "btn btn-block btn-primary" : "btn btn-block btn-outline-secondary")">@t</a>
    }
</div>